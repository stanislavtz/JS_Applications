{{> header}}
<div class="row form-layout p-5">
    <div class="col-md-12">
        <div class="recepieInfo">
            <div class="detailsFoodImage">
                <img src="{{recipe.foodImageURL}}"
                    alt="">
            </div>

            <div class="infoPack">
                <h3 class="my-3">{{name}}</h3>
                <p class="prep-method">{{prepMethod}}</p>
                <p class="description">{{descripton}}</p>
            </div>
            <div class="actions">
                {{#if isOwner}}
                <a class="btn btn-danger" href="#/archive/{{recipe.objectId}}">Archive</a>
                <a class="btn btn-info" href="#/edit/{{recipe.objectId}}">Edit</a>
                {{else}}
                <a class="btn btn-success" href="#/like"> {{recipe.likes}} likes</a>
                {{/if}}
            </div>
        </div>

        <div class="detailsIngredients">
            <h3 class="my-3 ingredient">Ingredients</h3>
            <ul>
                {{#with recipe}}
                {{#each ingredients}}
                <li>{{this}}</li>
                {{/each}}
                {{/with}}
            </ul>
        </div>
    </div>
</div>
{{> footer}}