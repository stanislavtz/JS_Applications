{{>header}}
<div id="cinema">
    {{#if isMyMovies}}
    <h1>My Movies</h1>
    {{else}}
    <h1>All Movies</h1>
    <form action="#/catalog" method="GET">
        <label>Search genre:</label>
        <input type="text" name="search", value={{search}}>
        <input type="submit" value="Search">
    </form>
    {{/if}}
    <div class="movies">
        {{#if isMyMovies}}
            {{#each movies}}
                {{> myMovie}}
            {{/each}}
        {{else}}
            {{#each movies}}
                {{> movie}}
            {{/each}}
        {{/if}}
    </div>
</div>
{{>footer}}